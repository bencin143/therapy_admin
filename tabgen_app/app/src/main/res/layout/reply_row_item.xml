<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_margin="5dp"
        android:background="@drawable/cart_bg"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llcontentWithBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/username"
                    app:civ_border_width="2dp"
                    android:layout_gravity="top"
                    app:civ_border_color="#FFFFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:weightSum="3"

                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtsender"
                            android:textColor="#232324"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="sender"
                            android:layout_gravity="left"
                            android:gravity="center_vertical" />
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"

                            >
                            <!--<ImageView-->
                                <!--android:id="@+id/imgReply"-->
                                <!--android:layout_width="20dp"-->
                                <!--android:layout_margin="5dp"-->
                                <!--android:layout_height="20dp"-->
                                <!--android:src="@drawable/icon_arrow_back"-->
                                <!--/>-->

                            <!--<ImageView-->
                                <!--android:layout_margin="5dp"-->
                                <!--android:id="@+id/imgMessages"-->
                                <!--android:layout_width="20dp"-->
                                <!--android:layout_height="20dp"-->
                                <!--android:src="@drawable/icon_reply_gray"-->
                                <!--/>-->
                            <TextView
                                android:text="11"
                                android:textSize="10sp"
                                android:id="@+id/txtLikeCount"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/imgFavorite"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_love_gray"
                                />

                            <!--<ImageView-->
                                <!--android:layout_margin="5dp"-->
                                <!--android:id="@+id/imgBookmark"-->
                                <!--android:layout_width="20dp"-->
                                <!--android:layout_height="20dp"-->
                                <!--android:src="@drawable/icon_my_bookmark_gray"-->
                                <!--/>-->

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#383737"
                            android:text="test"
                            android:typeface="sans"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentTop="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:background="@android:color/darker_gray"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:id="@+id/rlDocumentFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="right">

                            <TextView
                                android:id="@+id/txtDocName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="img.pdf"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                />

                            <ImageView
                                android:padding="5dp"
                                android:layout_toRightOf="@+id/txtDocName"
                                android:id="@+id/imgDocDownloads"
                                android:src="@drawable/download_icon"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:layout_height="wrap_content"
                                />
                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/llDocloadingPanel"
                                android:layout_toRightOf="@+id/txtDocName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center" >
                                <ProgressBar

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:indeterminate="true" />
                            </RelativeLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:padding="10dp"
                            android:visibility="gone"
                            android:id="@+id/rlFile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/imgImages"
                                android:visibility="visible"
                                android:src="@drawable/place_holder"
                                android:layout_width="300dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:id="@+id/imgDownloads"
                                android:src="@drawable/download_icon"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="220dp"
                                android:layout_marginTop="150dp" />
                            <RelativeLayout
                                android:visibility="gone"
                                android:layout_marginTop="80dp"
                                android:id="@+id/loadingPanel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center" >
                                <ProgressBar

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:indeterminate="true" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/txtdateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text="dateInfo"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textStyle="italic"
                            android:textColor="#8f8e8e"
                            android:layout_gravity="right"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:gravity="right" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

