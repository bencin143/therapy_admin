<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:background="@drawable/cart_bg"
       android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/landing_chat1" />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtHeader"
                android:alpha=".50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtHeadlines"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
            <TextView
                android:id="@+id/txtHeadlines"
                android:alpha=".50"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
        </RelativeLayout>
   </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/cart_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:background="@drawable/cart_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgContent1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/landing_chat1" />
            <TextView
                android:id="@+id/txtHeader1"
                android:maxLines="1"
                android:ellipsize="end"
                android:alpha=".50"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtHeadlines1"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:textStyle="bold"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
            <TextView
                android:id="@+id/txtHeadlines1"
                android:alpha=".50"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
