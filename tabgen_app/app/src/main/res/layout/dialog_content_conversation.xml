<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nganthoi.salai.tabgen.ConversationActivity"
    android:background="#00000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskbar"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_below="@+id/black_line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"

                android:layout_height="30dp"
                android:id="@+id/pickImageFile"
                android:src="@drawable/attach_file"
                />


            <ImageView

                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:id="@+id/cameraImageButton"
                android:src="@drawable/icon_camera"
                />
            <ImageView
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/imgSentMessages"
                android:src="@drawable/sent_message"
                />
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/writeImageButton"
                android:src="@drawable/icon_pen"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
