<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cdCardView"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/cart_bg"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout

        android:id="@+id/llcontentWithBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/username"
            app:civ_border_width="2dp"
            android:layout_gravity="top"
            app:civ_border_color="#FFFFFF"/>
        <LinearLayout
            android:weightSum="3"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2.5"
                android:id="@+id/txtTitle"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Atul"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtDate"
                android:layout_weight=".5"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
        </LinearLayout>

        </LinearLayout>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/txtDetails"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/imgDetail"
        android:src="@drawable/attach"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/rlDocumentFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right">

    <TextView
        android:id="@+id/txtDocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="img.pdf"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/icon_love_gray" />

        <ImageView
            android:id="@+id/imgBookmark"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/icon_my_bookmark_gray" />
        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/share_icon"
            />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>