<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nganthoi.salai.tabgen.ConversationActivity"
    android:background="#00000000">
    <!--tools:showIn="@layout/activity_conversation"
    -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_above="@+id/taskbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagesContainerRecyclerview"
        android:divider="#d4d2d2"
        android:dividerHeight="1dp"
        android:paddingBottom="3dp"
        android:transcriptMode="alwaysScroll"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="true"
        android:scrollIndicators="right"
        android:overScrollFooter="#fff6f6"
        android:overScrollHeader="#fff6f6"
        android:outlineProvider="paddedBounds"
        android:background="#00000000" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <!--

    android:divider="@android:color/transparent"
    android:fastScrollEnabled="true"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskbar"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <!--android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"-->

        <LinearLayout
            android:layout_below="@+id/black_line"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:id="@+id/pickImageFile"
                android:src="@drawable/attach_file"
                />
            <EditText
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/messageEditText"
                android:hint="@string/messageHint"
                android:background="@drawable/edittext_style" />

            <ImageView

                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:id="@+id/cameraImageButton"
                android:src="@drawable/icon_camera"
                />
            <ImageView
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/imgSentMessages"
                android:src="@drawable/sent_message"
                />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/writeImageButton"
            android:src="@drawable/icon_pen"
             />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
