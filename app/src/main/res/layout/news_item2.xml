<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:background="@drawable/cart_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgContent2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/landing_chat1" />
            <TextView
                android:id="@+id/txtHeader2"
                android:alpha=".50"
                android:maxLines="1"
                android:textSize="20sp"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtHeadlines2"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:textStyle="bold"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
            <TextView
                android:id="@+id/txtHeadlines2"
                android:alpha=".50"
                android:maxLines="2"
                android:textSize="16sp"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="12dp"
                android:background="#AA000000"
                android:textColor="@android:color/white"
                android:text="Golden Gate" />
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:background="@drawable/cart_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgContent3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landing_chat1" />
                <TextView
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/txtHeader3"
                    android:alpha=".50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtHeadlines3"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:background="#AA000000"
                    android:textColor="@android:color/white"
                    android:text="Golden Gate" />
                <TextView
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/txtHeadlines3"
                    android:alpha=".50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:background="#AA000000"
                    android:textColor="@android:color/white"
                    android:text="Golden Gate" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgContent4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landing_chat1" />
                <TextView
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/txtHeader4"
                    android:alpha=".50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtHeadlines4"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:background="#AA000000"
                    android:textColor="@android:color/white"
                    android:text="Golden Gate" />
                <TextView
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:id="@+id/txtHeadlines4"
                    android:alpha=".50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:background="#AA000000"
                    android:textColor="@android:color/white"
                    android:text="Golden Gate" />
            </RelativeLayout>



        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>

