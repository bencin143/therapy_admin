<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nganthoi.salai.tabgen.ConversationActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/reveal_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <LinearLayout
                android:id="@+id/llPhotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgPhotos"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/pics" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Gallery" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgDocuments"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/docs" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Documents" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgCamera"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/camera" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgContact"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/contact" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Contacts" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</io.codetail.widget.RevealFrameLayout>
