<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cartbg"
        android:background="@drawable/cart_bg"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        />
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/contact"
        />
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:padding="20dp"
        android:layout_weight="4.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:imeOptions="flagNoExtractUi"
        android:hint="Reply.."
        android:background="@drawable/cart_bg"
        />
    <RelativeLayout
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/black_line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:layout_height="30dp"
                    android:id="@+id/pickImageFile"
                    android:src="@drawable/attach_file"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/cameraImageButton"
                    android:src="@drawable/icon_camera"
                    />
            <RelativeLayout
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgSentMessages"
                    android:src="@drawable/sent_message"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
                <ImageView
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/writeImageButton"
                    android:src="@drawable/icon_pen"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
